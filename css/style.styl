//imports
// --------------------
@import url('libs/reset.css')

border-radius()
    -moz-border-radius arguments
    -ms-border-radius arguments
    -o-border-radius arguments
    -webkit-border-radius arguments
    border-radius arguments

transition(type, val)
    -moz-transition type val
    -ms-transition type val
    -o-transition type val
    -webkit-transition type val
    transition type val

opacities(opa, opai)
    opacity opa
    -moz-opacity opa
    filter alpha\(opacity\=opai\)

radius(rad)
    border-radius rad px

pie()
    behavior url(libs/PIE.htc)

//Paths
// --------------------
$ipa = "../img/"

// fonts
// -------------------------
/*for font in ubuntub ubuntul ubuntum arista20 arista20a
    @font-face
        font-family font
        src url(fonts/font.ttf) format("truetype")*/

// colors
// -------------------------
$black = #33383d
$green = #693

//globals
// --------------------
body
    background url($ipa + bg-body.jpg)
    font 100% arial
    line-height 1em

//listas
//
li
    displays()

//links
// --------------------
a
    color #777
    display block
    text-decoration none
    &:hover
        color $black

//images
// --------------------
img
    display block
    height auto
    max-width 100%
    width auto\9 //IE

//grid
//a 1024 para mejorar la experiencia de usuario :D
// --------------------
.container
    margin 0 auto
    position relative
    width 960px

abbr
    text-transform uppercase
//
//header
header
    box-shadow inset 0 30px 40px #ddd
    line-height 55px
    overflow hidden
    padding 20px 0
    h1
        background url($ipa + logo.png) no-repeat
        float left
        height 45px
        overflow hidden
        text-indent 100%
        width 200px
    h2
        float left

//left
.left
    float left
    margin-right 40px
    padding-right 10px
    text-align right
    width 200px
    h3
        border-bottom 2px dotted #bbb
        color #888
        display inline-block
        font-weight 200
        font-size 1.3em
        margin-bottom 6px
        padding-bottom 6px
    li
        display block
        line-height 1.4em
    input[type=text]
        background #fff url($ipa + search.png) no-repeat 95% center
        border 1px solid #ddd
        border-radius(8px)
        box-shadow inset 0 1px 1px #ddd
        margin-top 10px
        padding 4px 6px
    nav
        border-bottom 1px solid #ddd
        padding-bottom 30px

#logo-web
    border-top 2px solid #fff
    padding-top 30px
    p
        color #777
        font-size 1.2em
        line-height 1.2em

#content
    overflow hidden

#articles
    float left
    width 710px
    article
        border-bottom 2px solid #ddd
        border-top 2px solid #fff
        padding 30px 0
        &:first-child
            border-top 0
            padding-top 5px
        &:last-child
            border-bottom 0
    h2
        font-size 1.6em
    time
        color #bbb
        display block
        font-size 0.8em
        font-style italic
        margin 4px 0 6px 0
    p
        color #555  
        font-size 0.9em
        line-height 1.4em
        margin-top 10px

footer
    border-top 2px solid #f1f1f1
    padding 20px 0
    //margin 20px 0
    text-align center
    a
        display block
        margin 0 auto
        width 127px
    p
        color #555
        line-height 1.4em
        margin 10px auto
        width 60%