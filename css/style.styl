//imports
// --------------------
@import url('libs/reset.css')

// Elementos al lado sin usar float
displays()
    display inline-block
    vertical-align top
    .lt-ie8 &
        *display inline
        *zoom 1

border-radius()
    -moz-border-radius arguments
    -ms-border-radius arguments
    -o-border-radius arguments
    -webkit-border-radius arguments
    border-radius arguments

transition(type, val)
    -moz-transition type val
    -ms-transition type val
    -o-transition type val
    -webkit-transition type val
    transition type val

opacities(opa, opai)
    opacity opa
    -moz-opacity opa
    filter alpha\(opacity\=opai\)

radius(rad)
    border-radius rad px

pie()
    behavior url(libs/PIE.htc)

//Paths
// --------------------
$ipa = "../img/"

// fonts
// -------------------------
for font in ubuntub ubuntul ubuntum arista20 arista20a
    @font-face
        font-family font
        src url(fonts/font.ttf) format("truetype")

// colors
// -------------------------
$black = #33383d
$green = #693

//globals
// --------------------
body
    //background url($ipa + bg-body2.jpg)
    font 100% arial
    line-height 1em

//listas
//
li
    displays()
    &:hover ul
        display block
    ul
        background #fff
        border 1px solid #ddd
        display none
        right 0
        position absolute
        top 5px
        z-index 3
    li
        border-bottom 1px solid #f1f1f1
        display block
        line-height 32px
        margin 0 !important
        padding 0 20px

//links
// --------------------
a
    color #777
    display block
    text-decoration none
    &:hover
        color $black

//images
// --------------------
img
    display block
    height auto
    max-width 100%
    width auto\9 //IE

//grid
//a 1024 para mejorar la experiencia de usuario :D
// --------------------
.container
    margin 0 auto
    position relative
    width 960px

//
//header
header
    background -webkit-linear-gradient(#fff, #f7f7f7)
    line-height 45px
    padding 10px 0
    h1
        displays()
        background url($ipa + logo2.png) no-repeat
        font 2.5em arista20a
        height 45px
        overflow hidden
        text-indent 100%
        width 200px
        a
    nav
        //margin-top -8px
        position absolute
        right 0
        top 0
    li
        margin 0 10px

//
//index
#pleyers-grid
    background $black
    margin-bottom 20px
    overflow hidden
    position relative
    width 100%
    hgroup
        background #f1f1f1
        height 90px
        left 50%
        margin 50px 0 0 -300px
        padding 30px
        position absolute
        top 0
        width 540px
        z-index 2
    h2
        color #333
        font 2.5em ubuntum
    h3
        font 1.8em ubuntul
    abbr
        text-transform uppercase
    ul
        margin-left -35px
        width 107%
        z-index 1
    li
        float left
        transition(opacity, 0.3s)
        opacities(0.75, 75)
        width 140px
        &:hover
            opacities(1, 100)

//articles
#articles
    displays()
    margin-right 15px
    width 670px
    article
        background #fff
        border-bottom 1px dashed #aaa
        margin-bottom 50px
        padding-bottom 100px
        position relative
    .img-container
        height 340px
        overflow hidden
    div
        background #fff
        border-top 5px solid #529944
        bottom 0
        padding 40px 45px
        position absolute
        right 0
        width 60%
    h2
        font 1.3em ubuntul
        margin-bottom 6px
    time
        font 0.9em ubuntul
        position absolute
        right 5px
        top 5px
    p
        font-size 0.9em
        line-height 1.5em

//
//tops
#top
    displays()
    //border 1px solid #5e753c
    div
        box-shadow 0px 2px 4px #cdbca2
        border-radius 6px
        margin-bottom 20px
        padding-bottom 1px
        width 270px
    h3
        border-radius 6px 6px 0 0
        color #fff
        font 1.2em ubuntum
        padding 10px
        text-shadow 0px -1px #4e662d
    ul
        padding 0 10px
    li
        border-bottom 1px solid #DDD
        display block
        margin-bottom 10px
        padding 10px 0
    .img-container
    h4
        displays()
        vertical-align middle
    .img-container
        margin-right 5px
    img
        border 4px solid #fff
        box-shadow 1px 1px 3px #aaa
        width 60px
    h4
        font 0.9em ubuntum

#authors
    h3
        background #80995d
#post
    h3
        background #6298af